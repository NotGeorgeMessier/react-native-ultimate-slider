{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "strict": true,
        "target": "esnext",
        "outDir": "./dist",
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "types": ["react-native-reanimated"]
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "include": [
        "./src"
    ]
  }
  